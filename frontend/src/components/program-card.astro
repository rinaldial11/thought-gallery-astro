---
// src/components/program-card.astro
import { directus } from '@/lib/directus-instance';
import { readItems } from '@directus/sdk';

const programTitle = Astro.props.programTitle;
const image = Astro.props.image;
const slug = Astro.props.slug;

const posts = await directus.request(
  readItems("posts", {
    filter: {
      title: {
        _eq: programTitle,
      },
      status: {
        _eq: "published",
      }
    },
    fields: ["slug", "title", 'body'],
    limit: 1
  })
);

const post = posts?.[0];
---

<div class="bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden">
  <img
    src={image}
    alt={programTitle}
    class="w-full h-48 object-cover"
  />
  <div class="p-8">
    <h3 class="text-2xl font-semibold text-gray-900 mb-4">
      {programTitle}
    </h3>
    <p class="text-gray-600 mb-6">
      {post?.body ?? "Deskripsi belum tersedia."}
    </p>
    <a
      href={`/post/${post.slug}`}
      class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors"
    >
      Pelajari â†’
    </a>
  </div>
</div>
